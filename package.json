{
  "name": "maker-job-watcher",
  "version": "1.0.0",
  "description": "AWS Lambda function to monitor MakerDAO jobs using the Sequencer contract",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    
    "deploy": "serverless deploy --stage prod",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "./scripts/deploy.sh prod",
    "deploy:test": "serverless deploy --stage test",
    
    "undeploy": "serverless remove --stage prod",
    "undeploy:dev": "serverless remove --stage dev",
    
    "logs": "serverless logs --function jobWatcher --stage prod --tail",
    "logs:dev": "serverless logs --function jobWatcher --stage dev --tail",
    
    "invoke": "serverless invoke --function jobWatcher --stage prod",
    "invoke:dev": "serverless invoke --function jobWatcher --stage dev",
    "invoke:test": "serverless invoke --function jobWatcher --stage prod --data '{\"test\": true}'",
    
    "info": "serverless info --stage prod",
    "info:dev": "serverless info --stage dev",
    
    "package": "npm run build && zip -r function.zip dist node_modules",
    "test:local": "ts-node scripts/test-local.ts",
    "start:local": "nodemon --exec ts-node scripts/test-local.ts",
    "dev": "npm run build && node dist/scripts/test-local.js"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.864.0",
    "@types/node-fetch": "^2.6.7",
    "dotenv": "^17.2.1",
    "ethers": "^6.8.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.125",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "serverless": "^3.38.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
